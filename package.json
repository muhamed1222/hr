{
  "name": "outcast-timebot",
  "version": "1.0.0",
  "description": "Telegram-бот для учёта рабочего времени",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "dev:full": "npm run build:frontend && nodemon src/app.js",
    "build:frontend": "cd admin-panel && npm install && npm run build",
    "build:all": "npm run build:frontend && npm start",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=lcov",
    "test:verbose": "jest --verbose",
    "test:auth": "jest tests/auth.test.js --verbose",
    "test:middleware": "jest tests/middleware/ --verbose",
    "test:services": "jest tests/services/ --verbose",
    "test:integration": "jest --testPathPattern='tests/(auth|middleware|services)' --runInBand --verbose",
    "test:ci": "jest --ci --coverage --detectOpenHandles",
    "setup:admin": "node scripts/create-admin.js",
    "setup:db": "node scripts/add-password-hash.js && node scripts/fix-telegram-id-safe.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "node scripts/fix-lint.js",
    "lint:fix-advanced": "node scripts/fix-lint-advanced.js",
    "format": "prettier --write \"src/**/*.{js,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,json,md}\"",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix --force",
    "update-deps": "node scripts/update-deps.js",
    "build": "echo 'Build completed'",
    "build:dev": "cd admin-panel && npm run build:dev",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "db:migrate": "node src/database/migrate.js",
    "db:seed": "node src/database/seed.js",
    "db:reset": "rm -f database.sqlite && npm run db:migrate && npm run db:seed",
    "ssl:generate": "node -e \"require('./src/config/ssl').generateSelfSignedCert()\"",
    "metrics": "curl -s http://localhost:3000/health | jq .",
    "health": "curl -s http://localhost:3000/health",
    "setup": "npm install && npm run migrate"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "excel-builder-vanilla": "^4.0.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "multer": "^2.0.1",
    "node-cron": "^4.1.0",
    "node-telegram-bot-api": "^0.66.0",
    "pdfkit": "^0.13.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redis": "^5.5.6",
    "sequelize": "^6.35.0",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.9.0",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "telegram",
    "bot",
    "timetracking",
    "hr",
    "attendance"
  ],
  "author": "Outcast Development",
  "license": "MIT"
}
