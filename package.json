{
  "name": "outcast-timebot",
  "version": "1.0.0",
  "description": "Telegram-бот для учёта рабочего времени",
  "main": "src/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "bot": "node start-bot.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "dev:full": "npm run build:frontend && nodemon src/app.js",
    "build:frontend": "cd admin-panel && npm install && npm run build",
    "build:all": "npm run build:frontend && npm start",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "db:migrate": "node src/database/migrate.js",
    "db:seed": "node src/database/seed.js",
    "db:reset": "rm -f database.sqlite && npm run db:migrate && npm run db:seed",
    "ssl:generate": "node -e \"require('./src/config/ssl').generateSelfSignedCert()\"",
    "metrics": "curl -s http://localhost:3000/health | jq .",
    "health": "curl -s http://localhost:3000/health",
    "setup": "npm install && npm run migrate",
    "update-deps": "node scripts/update-dependencies.js",
    "security-logs": "node scripts/view-security-logs.js",
    "security-logs:alerts": "node scripts/view-security-logs.js --status ALERT",
    "security-logs:warnings": "node scripts/view-security-logs.js --status WARNING",
    "security-logs:export-json": "node scripts/view-security-logs.js --export json",
    "security-logs:export-csv": "node scripts/view-security-logs.js --export csv",
    "security-logs:last-hour": "node scripts/view-security-logs.js --hours 1",
    "security-logs:last-day": "node scripts/view-security-logs.js --hours 24",
    "security-logs:last-week": "node scripts/view-security-logs.js --hours 168",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:ci": "jest --ci --coverage",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "migrate:ts": "ts-node scripts/migrate-to-typescript.ts",
    "migrate:check": "ts-node scripts/check-typescript-migration.ts"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron": "^4.3.1",
    "csrf": "^3.1.0",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "excel-builder-vanilla": "^4.0.1",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "geoip-lite": "^1.4.9",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "multer": "^2.0.1",
    "node-cron": "^4.1.0",
    "node-forge": "^1.3.1",
    "node-telegram-bot-api": "^0.66.0",
    "pdfkit": "^0.17.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redis": "^5.5.6",
    "sequelize": "^6.35.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "jest": "^30.0.2",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "telegram",
    "bot",
    "timetracking",
    "hr",
    "attendance"
  ],
  "author": "Outcast Development",
  "license": "MIT"
}
