{
  "name": "outcast-timebot",
  "version": "1.0.0",
  "description": "Telegram-бот для учёта рабочего времени",
  "main": "src/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "bot": "node start-bot.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "dev:full": "pnpm run build:frontend && nodemon src/app.js",
    "build:frontend": "cd admin-panel && pnpm install && pnpm run build",
    "build:all": "pnpm run build:frontend && pnpm start",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:make": "knex migrate:make",
    "seed": "knex seed:run",
    "seed:make": "knex seed:make",
    "db:migrate": "node src/database/migrate.js",
    "db:seed": "node src/database/seed.js",
    "db:reset": "rm -f database.sqlite && pnpm run db:migrate && pnpm run db:seed",
    "ssl:generate": "node -e \"require('./src/config/ssl').generateSelfSignedCert()\"",
    "metrics": "curl -s http://localhost:3000/health | jq .",
    "health": "curl -s http://localhost:3000/health",
    "setup": "pnpm install && pnpm run migrate",
    "update-deps": "pnpm update && cd frontend && pnpm update",
    "security-logs": "node scripts/view-security-logs.js",
    "security-logs:alerts": "node scripts/view-security-logs.js --status ALERT",
    "security-logs:warnings": "node scripts/view-security-logs.js --status WARNING",
    "security-logs:export-json": "node scripts/view-security-logs.js --export json",
    "security-logs:export-csv": "node scripts/view-security-logs.js --export csv",
    "security-logs:last-hour": "node scripts/view-security-logs.js --hours 1",
    "security-logs:last-day": "node scripts/view-security-logs.js --hours 24",
    "security-logs:last-week": "node scripts/view-security-logs.js --hours 168",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "migrate:ts": "ts-node scripts/migrate-to-typescript.ts",
    "migrate:check": "ts-node scripts/check-typescript-migration.ts",
    "check-deps": "echo '✓ Dependencies check disabled'"
  },
  "dependencies": {
    "@types/bull": "^3.15.9",
    "@types/express-rate-limit": "^5.1.3",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron": "^4.3.1",
    "csrf": "^3.1.0",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "excel-builder-vanilla": "^4.0.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.3",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "geoip-lite": "^1.4.9",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "moment": "^2.29.4",
    "multer": "^2.0.1",
    "node-cron": "^4.1.0",
    "node-forge": "^1.3.1",
    "node-telegram-bot-api": "^0.63.0",
    "pdfkit": "^0.17.1",
    "pg": "^8.16.2",
    "pg-hstore": "^2.3.4",
    "rate-limit-redis": "^4.2.1",
    "redis": "^5.5.6",
    "sequelize": "^6.35.0",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@mapbox/node-pre-gyp": "^2.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "better-sqlite3": "^11.10.0",
    "eslint": "^8.57.1",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "telegram",
    "bot",
    "timetracking",
    "hr",
    "attendance"
  ],
  "author": "Outcast Development",
  "license": "MIT"
}
