{
  "name": "outcast-timebot",
  "version": "1.0.0",
  "description": "Telegram-бот для учёта рабочего времени",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:auth": "jest tests/auth.test.js --verbose",
    "test:middleware": "jest tests/middleware/ --verbose",
    "test:services": "jest tests/services/ --verbose",
    "test:integration": "jest --testPathPattern='tests/(auth|middleware|services)' --runInBand --verbose",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "setup:admin": "node scripts/create-admin.js",
    "setup:db": "node scripts/add-password-hash.js && node scripts/fix-telegram-id-safe.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "audit:security": "npm audit"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "excel-builder-vanilla": "^4.0.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "node-cron": "^4.1.0",
    "node-telegram-bot-api": "^0.66.0",
    "pdfkit": "^0.13.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redis": "^5.5.6",
    "sequelize": "^6.35.0",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.9.0",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "telegram",
    "bot",
    "timetracking",
    "hr",
    "attendance"
  ],
  "author": "Outcast Development",
  "license": "MIT"
}
