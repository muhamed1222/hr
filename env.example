# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=outcast_timebot
DB_USER=postgres
DB_PASSWORD=your_secure_database_password_here

# For production (e.g. Railway, Heroku)
# DATABASE_URL=postgres://username:password@host:port/database

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# JWT Security Settings
# Используйте команду: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long_here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3000
NODE_ENV=development

# Admin Panel Authentication
# ВНИМАНИЕ: Смените эти значения в продакшене!
# После запуска используйте /api/auth/change-password для смены пароля
ADMIN_USERNAME=admin
ADMIN_PASSWORD=SecureAdminPass2024!

# System Settings
TZ=Europe/Moscow

# Features
REMINDERS_ENABLED=true
DEMO_MODE=false

# Security Headers (for production)
# FORCE_HTTPS=true
# ALLOWED_ORIGINS=https://your-domain.com

# Security Settings
SESSION_SECRET=your_super_secret_session_key_minimum_32_characters
CSRF_TIMEOUT=3600000 # 1 hour in milliseconds 